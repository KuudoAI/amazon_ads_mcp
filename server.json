{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.KuudoAI/amazon_ads_mcp",
  "description": "Amazon Ads API MCP server for Amazon Advertising API",
  "version": "0.2.6",
  "repository": {
    "url": "https://github.com/KuudoAI/amazon_ads_mcp",
    "source": "github"
  },
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "amazon-ads-mcp",
      "version": "0.2.6",
      "transport": {
        "type": "stdio",
        "args": [
          "-m",
          "amazon_ads_mcp.server.mcp_server"
        ]
      },
      "environmentVariables": [
        {
          "name": "AMAZON_ADS_AUTH_METHOD",
          "description": "Authentication method: direct or openbridge.",
          "isRequired": false,
          "isSecret": false
        },
        {
          "name": "AMAZON_AD_API_CLIENT_ID",
          "description": "Amazon Ads API client ID for direct auth.",
          "isRequired": false,
          "isSecret": false
        },
        {
          "name": "AMAZON_AD_API_CLIENT_SECRET",
          "description": "Amazon Ads API client secret for direct auth.",
          "isRequired": false,
          "isSecret": true
        },
        {
          "name": "AMAZON_AD_API_REFRESH_TOKEN",
          "description": "Amazon Ads API refresh token for direct auth.",
          "isRequired": false,
          "isSecret": true
        },
        {
          "name": "AMAZON_AD_API_PROFILE_ID",
          "description": "Amazon Ads profile ID for direct auth.",
          "isRequired": false,
          "isSecret": false
        },
        {
          "name": "OPENBRIDGE_REFRESH_TOKEN",
          "description": "Openbridge refresh token (API key).",
          "isRequired": false,
          "isSecret": true
        },
        {
          "name": "OPENBRIDGE_API_KEY",
          "description": "Openbridge API key (alias for OPENBRIDGE_REFRESH_TOKEN).",
          "isRequired": false,
          "isSecret": true
        },
        {
          "name": "OPENBRIDGE_REMOTE_IDENTITY_ID",
          "description": "Openbridge remote identity ID.",
          "isRequired": false,
          "isSecret": false
        },
        {
          "name": "AMAZON_ADS_REGION",
          "description": "Amazon Ads API region (na/eu/fe).",
          "isRequired": false,
          "isSecret": false
        },
        {
          "name": "AMAZON_AD_API_PACKAGES",
          "description": "Comma-separated API packages to load. Valid values are listed in allowedValues.",
          "isRequired": true,
          "isSecret": false,
          "allowedValues": [
            "accounts-account-budgets",
            "accounts-ads-accounts",
            "accounts-billing",
            "accounts-manager-accounts",
            "accounts-portfolios",
            "ads-api-v1-dsp",
            "ads-api-v1-sb",
            "ads-api-v1-sd",
            "ads-api-v1-sp",
            "ads-api-v1-st",
            "amazon-attribution",
            "amazon-marketing-stream",
            "amc-ad-audience",
            "amc-administration",
            "amc-rule-audience",
            "amc-workflow",
            "audience-insights",
            "audiences-discovery",
            "brand-benchmarks",
            "brand-metrics",
            "brand-stores-management",
            "campaign-manage",
            "change-history",
            "creative-assets",
            "data-provider-data",
            "dsp-advertisers",
            "dsp-audiences",
            "dsp-conversions",
            "dsp-measurement",
            "dsp-target-kpi-recommendations",
            "exports-snapshots",
            "forecasts",
            "locations",
            "marketing-mix-modeling",
            "moderation-results",
            "partner-opportunities",
            "persona-builder",
            "products-eligibility",
            "products-metadata",
            "profiles",
            "reach-forecasting",
            "reporting-version-3",
            "sp-suggested-keywords",
            "sponsored-brands-v3",
            "sponsored-brands-v4",
            "sponsored-display",
            "sponsored-products",
            "stores-analytics",
            "tactical-recommendations",
            "test-account",
            "unified-pre-moderation-results"
          ]
        },
        {
          "name": "AMAZON_ADS_DOWNLOAD_AUTH_TOKEN",
          "description": "Optional bearer token to protect download routes.",
          "isRequired": false,
          "isSecret": true
        }
      ]
    }
  ]
}
