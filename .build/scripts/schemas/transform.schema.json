{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "version": {"type": "string"},
    "generated": {"type": "string"},
    "namespace": {"type": "string"},
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["match"],
        "properties": {
          "match": {
            "oneOf": [
              {"type": "object", "required": ["operationId"]},
              {"type": "object", "required": ["method", "path"]}
            ]
          },
          "args": {
            "type": "object",
            "properties": {
              "expose": {"type": "object"}
            }
          },
          "input_transform": {
            "type": "object",
            "properties": {
              "parse_payload": {"type": "string"},
              "apply_preset": {"type": "boolean"},
              "coerce": {"type": "array", "items": {"type": "string"}},
              "compose": {"type": "object"}
            }
          },
          "output_transform": {
            "type": "object",
            "properties": {
              "projection": {"type": "array", "items": {"type": "string"}},
              "summary": {"type": "array", "items": {"type": "string"}},
              "sample_n": {"type": "integer", "minimum": 1},
              "artifact_threshold_bytes": {"type": "integer", "minimum": 1024}
            }
          },
          "pagination": {
            "type": "object",
            "properties": {
              "param_name": {"type": ["string", "null"]},
              "response_key": {"type": "string"},
              "all_pages": {"type": "boolean"},
              "limit_param": {"type": ["string", "null"]},
              "default_limit": {"type": "integer"},
              "max_pages": {"type": "integer", "minimum": 1}
            }
          },
          "batch": {
            "type": ["object", "null"],
            "properties": {
              "size": {"type": "integer", "minimum": 1},
              "path": {"type": "string"}
            }
          }
        }
      }
    }
  }
}
